                 wrapText="true">
            <font>
              <Font size="15.0"/>
            </font>
          </Label>
        </Pane>
        <Pane prefHeight="95.0" prefWidth="390.0">
          <MaterialIconView glyphName="CHECK_CIRCLE" layoutX="28.0" layoutY="70.0" size="36"/>
          <Label layoutX="95.0" layoutY="18.0" text="便捷">
            <font>
              <Font size="18.0"/>
            </font>
          </Label>
