            </JFXTreeTableView>
          </AnchorPane>
        </Tab>
        <Tab text="课程讨论">
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
        </Tab>
      </JFXTabPane>
    </Pane>
    <Pane fx:id="loginPane" visible="false">
      <Pane layoutX="120.0" layoutY="155.0">
        <JFXTextField fx:id="username" focusColor="#0039cb" labelFloat="true" layoutX="42.0" onAction="#login"
                      promptText="用户名">
          <font>
            <Font size="20.0"/>
          </font>
        </JFXTextField>
        <JFXPasswordField fx:id="password" focusColor="#0039cb" labelFloat="true" layoutX="42.0" layoutY="91.0"
                          onAction="#login" prefHeight="41.0" prefWidth="244.0" promptText="密码">
          <font>
            <Font size="20.0"/>
          </font>
        </JFXPasswordField>
        <JFXButton fx:id="login" buttonType="RAISED" layoutX="42.0" layoutY="194.0" onAction="#login" prefHeight="41.0"
