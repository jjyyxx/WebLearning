            <JFXTreeTableView fx:id="fileTable" prefHeight="512.0" prefWidth="740.0">
              <columns>
                <JFXTreeTableColumn fx:id="fileCheck" minWidth="133" prefWidth="209.0" resizable="false" text="多选"/>
