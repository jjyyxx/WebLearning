                <JFXTreeTableColumn fx:id="fileSize" minWidth="29.0" prefWidth="98.0" resizable="false" text="大小"/>
                <JFXTreeTableColumn fx:id="fileRead" minWidth="29.0" prefWidth="98.0" resizable="false" text="已读？"/>
              </columns>
            </JFXTreeTableView>
          </AnchorPane>
        </Tab>
        <Tab text="课程作业">
