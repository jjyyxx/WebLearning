                <JFXTreeTableColumn fx:id="workName" minWidth="133" prefWidth="209.0" resizable="false" text="名称"/>
                <JFXTreeTableColumn fx:id="workDue" minWidth="77.0" prefWidth="92.0" resizable="false" text="截止日期"/>
